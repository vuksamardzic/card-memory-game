{
  "name": "card-memory-game",
  "version": "1.0.0",
  "description": "Card memory is a game where you have to click on a card to see what image is underneath it and try to find the matching image underneath the other cards.",
  "main": "index.js",
  "scripts": {
    "dev": "./node_modules/.bin/webpack-dev-server --open",
    "prod": "./node_modules/.bin/webpack -p",
    "surge": "./node_modules/.bin/surge -p ./dist -d card-game.surge.sh",
    "deploy": "npm run prod && npm run surge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuksamardzic/card-memory-game.git"
  },
